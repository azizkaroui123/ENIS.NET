@model IEnumerable<ENISNC.Models.Section>

@{
    ViewData["Title"] = "Index";
}

<h1>Sections</h1>
<br />
<br />

<p>
    <a asp-action="Create"><button type="button" asp-action="Create" class="btn btn-primary">Create New</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.sectionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.schoolYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.schoolYear)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.SectionId" class="  fas fa-edit"></a>
                    <a asp-action="Details" asp-route-id="@item.SectionId" class=" fas fa-align-justify"></a>
                    <a asp-action="Delete" asp-route-id="@item.SectionId" class=" fas fa-prescription-bottle"></a>
            </td>
        </tr>
}
    </tbody>
</table>
